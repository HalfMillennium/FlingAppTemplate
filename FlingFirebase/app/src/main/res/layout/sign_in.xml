<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/gray_poly">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/suTitle"
        android:layout_marginTop="61dp"
        android:background="@drawable/basicbubblebutton"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingEnd="10dp"
        android:textColor="@android:color/primary_text_light"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/basicbubblebutton"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingEnd="10dp"
        android:textColor="@android:color/primary_text_light"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"/>

    <Button
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="signUp"
        android:text="Sign Up"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/profbuttonshape"
        android:onClick="signIn"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/suTitle"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/suTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:fontFamily="sans-serif-black"
        android:text="SIGN IN"
        android:textSize="30sp"
        android:textColor="#f9f9f9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>